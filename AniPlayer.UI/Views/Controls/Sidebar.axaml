<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="220" d:DesignHeight="600"
             x:Class="AniPlayer.UI.Sidebar"
             Width="220">

    <Border Background="{DynamicResource BgBase}" Padding="0,16">
        <DockPanel>

            <!-- App title -->
            <StackPanel DockPanel.Dock="Top" Margin="20,0,20,24">
                <TextBlock Text="AniPlayer"
                           FontSize="20" FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock Text="Local Anime Player"
                           FontSize="11" Opacity="0.4"
                           Foreground="{DynamicResource TextPrimary}"/>
            </StackPanel>

            <!-- Settings button pinned to bottom -->
            <Button x:Name="SettingsButton"
                    DockPanel.Dock="Bottom"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="20,12"
                    Background="Transparent"
                    Foreground="{DynamicResource TextSecondary}"
                    Content="Settings"
                    Click="SettingsButton_Click"
                    Margin="8,4"/>

            <!-- Nav buttons -->
            <StackPanel Spacing="2" Margin="8,0">
                <Button x:Name="HomeButton"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,12"
                        Background="Transparent"
                        Foreground="{DynamicResource TextPrimary}"
                        FontWeight="SemiBold"
                        Content="Home"
                        Click="HomeButton_Click"/>
                <Button x:Name="LibraryButton"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,12"
                        Background="Transparent"
                        Foreground="{DynamicResource TextSecondary}"
                        Content="Library"
                        Click="LibraryButton_Click"/>
                <Button x:Name="PlayerButton"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Padding="20,12"
                        Background="Transparent"
                        Foreground="{DynamicResource TextSecondary}"
                        Content="Player"
                        Click="PlayerButton_Click"/>
            </StackPanel>

        </DockPanel>
    </Border>
</UserControl>
