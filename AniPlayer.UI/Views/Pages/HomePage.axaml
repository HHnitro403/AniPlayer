<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="AniPlayer.UI.HomePage">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,32,32,64" Spacing="48">

            <!-- Continue Watching -->
            <StackPanel Spacing="16">
                <TextBlock Text="Continue Watching"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock x:Name="ContinueWatchingEmpty"
                           Text="Nothing here yet â€” start watching something!"
                           Opacity="0.5" FontSize="14" Foreground="{DynamicResource TextSecondary}"
                           IsVisible="False"/>
                <ItemsControl x:Name="ContinueWatchingList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>

            <!-- Recently Added -->
            <StackPanel Spacing="16">
                <TextBlock Text="Recently Added"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock x:Name="RecentlyAddedEmpty"
                           Text="Add a library folder to get started."
                           Opacity="0.5" FontSize="14" Foreground="{DynamicResource TextSecondary}"
                           IsVisible="False"/>
                <ItemsControl x:Name="RecentlyAddedList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="180"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>

            <!-- Quick Actions / Welcome Card -->
            <Border x:Name="QuickActionsSection"
                    Background="{DynamicResource BgCard}" 
                    CornerRadius="16" 
                    Padding="48"
                    Margin="0,24,0,0"
                    MaxWidth="800"
                    HorizontalAlignment="Center">
                <StackPanel Spacing="32">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Welcome to AniPlayer"
                                   FontSize="28" FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock Text="Your local anime library is just one folder away."
                                   FontSize="16" Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="24" HorizontalAlignment="Center">
                        <Button x:Name="AddLibraryButton"
                                Content="Add Library Folder"
                                Classes="Primary"
                                Padding="24,12"
                                Click="AddLibraryButton_Click"/>
                                
                        <Button x:Name="OpenFileButton"
                                Content="Open Video File"
                                Background="Transparent"
                                BorderBrush="{DynamicResource TextSecondary}"
                                BorderThickness="1"
                                Foreground="{DynamicResource TextPrimary}"
                                CornerRadius="8"
                                Padding="24,12"
                                Click="OpenFileButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
