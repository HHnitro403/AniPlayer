<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:AniPlayer.UI"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="600"
             x:Class="AniPlayer.UI.PlayerPage">

    <!-- Row 0: Video fills remaining space. Row 1: Controls in their own row,
         never covered by the native HWND from NativeControlHost. -->
    <Grid x:Name="RootGrid" RowDefinitions="*,Auto">

        <!-- Video area (Row 0) — native window lives here -->
        <Grid x:Name="VideoContainer" Grid.Row="0" Background="Black">
            <local:VideoHost x:Name="VideoHostControl"/>
            <TextBlock x:Name="PlaceholderText"
                       Text="Open a video file to start playback"
                       Foreground="#88FFFFFF"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"/>

            <Button x:Name="SkipOverlayButton"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,30,20"
                    Padding="15,10"
                    Background="#CC000000"
                    Foreground="White"
                    CornerRadius="5"
                    IsVisible="False"
                    Click="OnSkipButtonClick">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#E6202020"/>
                        <Setter Property="Foreground" Value="#4CC2FF"/>
                    </Style>
                </Button.Styles>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource fast_forward_regular}" Width="16" Height="16"/>
                    <TextBlock x:Name="SkipButtonText" Text="Skip Intro" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Controls bar (Row 1) — separate from native window, always accessible -->
        <Border x:Name="ControlsBar"
                Grid.Row="1"
                Background="#1A1A2E"
                Padding="16,10">
            <StackPanel Spacing="8">

                <!-- Progress bar -->
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <TextBlock x:Name="TimeCurrentText" Text="0:00"
                               Foreground="#AAFFFFFF" FontSize="12"
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Slider x:Name="ProgressSlider" Grid.Column="1"
                            Minimum="0" Maximum="100" Value="0"
                            VerticalAlignment="Center"/>
                    <TextBlock x:Name="TimeTotalText" Text="0:00"
                               Foreground="#AAFFFFFF" FontSize="12"
                               VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="2"/>
                </Grid>

                <!-- Transport controls + info -->
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Left: transport buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button x:Name="PlayPauseButton" Content="Play"
                                Padding="12,6" MinWidth="60"
                                Click="PlayPauseButton_Click"/>
                        <Button x:Name="StopButton" Content="Stop"
                                Padding="12,6"
                                Click="StopButton_Click"/>
                        <Button x:Name="NextButton" Content="Next"
                                Padding="12,6" IsEnabled="False"
                                Click="NextButton_Click"/>
                    </StackPanel>

                    <!-- Center: now-playing info -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock x:Name="NowPlayingText"
                                   Text="No file loaded"
                                   Foreground="#CCFFFFFF" FontSize="13"
                                   HorizontalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                    </StackPanel>

                    <!-- Right: audio tracks + status + fullscreen -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8"
                                VerticalAlignment="Center">
                        <TextBlock Text="Audio:" Foreground="#88FFFFFF"
                                   FontSize="12" VerticalAlignment="Center"/>
                        <WrapPanel x:Name="AudioTracksPanel"/>
                        <TextBlock x:Name="StatusText" Text="Stopped"
                                   Foreground="#66FFFFFF" FontSize="11"
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                        <Button x:Name="FullscreenButton" Content="Fullscreen"
                                Padding="8,4" FontSize="11"
                                Click="FullscreenButton_Click"
                                Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
